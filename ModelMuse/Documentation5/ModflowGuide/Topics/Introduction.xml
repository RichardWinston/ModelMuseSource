      <li styleclass="Normal"><text styleclass="Normal" translate="true">MODFLOW-2005 </text><link displaytype="text" defaultstyle="true" type="weblink" href="&lt;%LINK_CAPTION%&gt;" target="_blank" styleclass="Normal" translate="true">http://water.usgs.gov/ogw/modflow/MODFLOW-2005-Guide/</link><conditional-text type="END"/><conditional-text type="IFNOT" value="MODFLOW-LGR"/></li>
      <li styleclass="Normal"><text styleclass="Normal" translate="true">MODFLOW-LGR </text><link displaytype="text" defaultstyle="true" type="weblink" href="&lt;%LINK_CAPTION%&gt;" target="_blank" styleclass="Normal" translate="true">http://water.usgs.gov/ogw/modflow-lgr/MODFLOW-LGR-Guide/index.html</link><conditional-text type="END"/><conditional-text type="IFNOT" value="MODFLOW-CFP"/></li>
      <li styleclass="Normal"><text styleclass="Normal" translate="true">MODFLOW-CFP </text><link displaytype="text" defaultstyle="true" type="weblink" href="&lt;%LINK_CAPTION%&gt;" target="_blank" styleclass="Normal" translate="true">http://water.usgs.gov/ogw/cfp/cfp.htm</link><conditional-text type="END"/><conditional-text type="IFNOT" value="MODFLOW-NWT"/></li>
      <li styleclass="Normal"><text styleclass="Normal" translate="true">MODFLOW-NWT </text><link displaytype="text" defaultstyle="true" type="weblink" href="&lt;%LINK_CAPTION%&gt;" target="_blank" styleclass="Normal" translate="true">http://water.usgs.gov/ogw/modflow-nwt/MODFLOW-NWT-Guide/</link><conditional-text type="END"/><conditional-text type="IFNOT" value="MODFLOW-FMP2"/></li>
